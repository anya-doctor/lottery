.list-num {
  position:relative;
  border-bottom:1px solid #dfdfdf;
  background-color:#fff;
}
.list-num .item {
  height:66rpx;
  line-height:66rpx;
  padding:0 20rpx;
  color:#333;
  font-size:14px;
}
.list-num .item text {
  color:#ef002e;
  margin-left:40rpx;
}
.list-num .down {
  position:absolute;
  left:50%;
  margin-left:-52rpx;
  bottom:-38rpx;
  background-color:#fff;
  padding-left:10rpx;
  width:104rpx;
  height:40rpx;
  line-height:40rpx;
  border-left:1px solid #dfdfdf;
  border-bottom:1px solid #dfdfdf;
  border-right:1px solid #dfdfdf;
  font-size:12px;
}
.list-num .down .arrow {
  position:absolute;
  right:10rpx;
  top:16rpx;
  height: 0px;
  width: 0px;
  border-top: 4px solid black;
  border-right: 4px solid transparent;
  border-bottom: 4px solid transparent;
  border-left:4px solid transparent;
}

.select-nums {
  margin-top:60rpx;
}
.select-nums .oper-info {
  display:flex;
  padding:0 20rpx;
  height:40rpx;
  line-height:40rpx;
  font-size:12px;
}
.select-nums .oper-info .oper {
  width:140rpx;
  background-color:#ef002e;
  color:#fff;
  border-radius:40rpx;
  text-align:center;
}
.select-nums .oper-info .info {
  text-align:right;
  flex:1;
}
.select-nums .oper-info .info .red {
  color:#ef002e;
}
.select-nums .oper-info .info .blue {
  color:#4a90e2;
}
.select-nums .red-nums,.select-nums .blue-nums {
  margin-top:40rpx;
  display:flex;
  flex-wrap: wrap;
  padding:0 20rpx 40rpx;
  justify-content:center;
  border-bottom:1px solid #dfdfdf;
}
.select-nums .red-nums .num,.select-nums .blue-nums .num {
  height:70rpx;
  line-height:70rpx;
  width:70rpx;
  border:1px solid #dfdfdf;
  border-radius:100%;
  text-align:center;
  margin-right:15rpx;
  margin-left:15rpx;
  margin-top:20rpx;
  color:#ef002e;
  font-size:36rpx;
  background-color:#fff;
}
.select-nums .red-nums .num.active {
  color:#fff;
  background-color:#ef002e;
}
.select-nums .blue-nums{
  border-bottom:0;
  margin-bottom:100rpx;
}
.select-nums .blue-nums .num {
  color:#4a90e2;
}
.select-nums .blue-nums .num.active {
  color:#fff;
  background-color:#4a90e2;
}

.fixed-bottom {
  position:fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  background-color:#fff;
  font-size:40rpx;
  color:#333;
}