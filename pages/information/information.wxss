.sub-nav {
  padding:20rpx;
  background-color:#fff;
  display:flex;
  justify-content: center;
  align-items: center;
  font-size:14px;
  text-align:center;
}
.sub-nav .item {
  width:25%;
}
.sub-nav .item .icon{
  width:116rpx;
  height:116rpx;
  border-radius:100%;
  border:1px solid #dfdfdf;
  background-color:#d8d8d8;
  margin:auto;
}
.sub-nav .item .name {
  margin-top:10rpx;
}
.every-day-select .title{
  height:56rpx;
  line-height:56rpx;
  display:flex;
  padding:0 20rpx;
  border-bottom:1px dashed #d8d8d8;
  font-size:12px;
}
.every-day-select .title view {
  width:50%;
}
.every-day-select .title view:last-child {
  text-align:right;
  color:#999;
}
.every-day-select .list .item {
  padding:20rpx;
  background-color:#fff;
  display:flex;
}
.every-day-select .list .item .con {
  flex:1;
  display:flex;
  flex-direction:column;
  justify-content: space-between;
}
.every-day-select .list .item .con .name {
  font-size:16px;
  color:#000;
  
}
.every-day-select .list .item .con .time {
  display:flex;
  font-size:12px;
  color:#666;
  
}
.every-day-select .list .item .con .time view:first-child {
  width:150rpx;
  height:40rpx;
  border-radius:30px;
  background-color:#ef002e;
  color:#fff;
  text-align:center;
  font-size:12px;
  margin-right:6rpx;
}
.every-day-select .list .item .con .time view.green {
  background-color:#7cd416;
}
.every-day-select .list .item image {
  width:288rpx;
  height:188rpx;
  background-color:#dfdfdf;
}

/*底部导航 start*/
.fixed-bottom{
  position:fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  background-color:#fff;
  display:box;
  display:-webkit-box;
  color:#999;
}
.fixed-bottom .item {
  width:25%;
  text-align:center;
  font-size:24rpx;
}
.fixed-bottom .item.active {
  color:#f90030;
}
.fixed-bottom .item image {
  margin:10rpx auto;
  width:40rpx;
  height:40rpx;
}  
/*底部导航 end*/