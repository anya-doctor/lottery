/**index.wxss**/
page {
  background-color:#f5f5f5;
}
view {
  box-sizing: border-box;
}
image {
  display:block;
  max-width:100%;
}
.clearfix:after {
   content:""; 
   display: block; 
   clear:both; 
}
.broadcast {
    margin: 20rpx 40rpx;
    background-color:#fff;
    height:50rpx;
    line-height:50rpx;
    border-radius:20rpx;
    font-size:20rpx;
}
.lottery-type {
  border-top:1px solid #dfdfdf;
  background-color:#fff;
}
.lottery-type .item {
  float:left;
  width:50%;
  border-right:1px solid #dfdfdf;
  border-bottom:1px solid #dfdfdf;
  padding:18rpx 20rpx;
  display:-webkit-box;
  box-sizing: border-box;
}
.lottery-type .item:last-child {
  border-bottom:none;
}
.lottery-type .item image {
  width:100rpx;
  height:100rpx;
  background-color:#d8d8d8;
  border-radius:100%;
}
.lottery-type .item .right {
  margin-left:20rpx;
}
.lottery-type .item .right .name {
  font-size:30rpx;
  color:#333;
  margin-top:10rpx;
  font-weight:600;
}
.lottery-type .item .right .info {
  margin-top:14rpx;
  font-size:25rpx;
  color:#ccc;
}
.con-bottom {
  position:relative;
  margin:40rpx auto;
  width:50%;
  height:30rpx;
  line-height:30rpx;
  color:#dbdbdb;
  font-size:30rpx;
  text-align:center;
  margin-bottom:140rpx;
}
.con-bottom .line{
  position:absolute;
  top:50%;
  width:100%;
  height:1px;
  background-color:#dfdfdf;
}
.con-bottom .txt {
  position:relative;
  z-index:1;
  background-color:#f5f5f5;
  padding: 0 20rpx;
}

/*底部导航 start*/
.fixed-bottom{
  position:fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  background-color:#fff;
  display:box;
  display:-webkit-box;
  color:#999;
}
.fixed-bottom .item {
  width:25%;
  text-align:center;
  font-size:24rpx;
}
.fixed-bottom .item.active {
  color:#f90030;
}
.fixed-bottom .item image {
  margin:10rpx auto;
  width:40rpx;
  height:40rpx;
}  
/*底部导航 end*/