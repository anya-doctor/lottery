/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page {
  background-color:#f5f5f5;
  font-family: Microsoft Yahei;
}
image {
  display:block;
}
view {
  box-sizing: border-box;
}

/*小标题 start*/
.small-title {
  height:70rpx;
  line-height:70rpx;
  padding:0 20rpx;
  background-color:#f5f5f5;
  color:#333;
  font-size:14px;
}
/*小标题 end*/

/* 副标题start */
.sub-title {
  height:82rpx;
  line-height:82rpx;
  padding:0 20rpx;
}
.sub-title .main {
  font-size:14px;
  color:#333;
}
.sub-title .less {
  margin-left:10rpx;
  font-size:12px;
  color:#999;
}
/* 副标题end */

/*号码球 start*/
.ball-number {
    height:70rpx;
    line-height:70rpx;
    display:flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    font-size:18px;
    color:#fff;
}
.ball-number.left {
  justify-content: left;
}
.ball-number text {
  display:block;
  width:70rpx;
  height:70rpx;
  border-radius:100%;
  margin-right:20rpx;
}
.ball-number text.red {
  background-color:#ef002e;
}
.ball-number text.blue {
  background-color:#4a90e2;
}
.ball-number-normal text {
  font-size:14px;
  margin-right:20rpx;
}
.ball-number-normal text.red {
  color:#ef002e;
}
.ball-number-normal text.blue {
  color:#4a90e2;
}

/*号码球 end*/

/*期数列表start*/
.periods-number-list .item{
  height:160rpx;
  background-color:#fff;
  padding:0 20rpx;
  display:flex;
  align-items: center;
  border-bottom:1px solid #f5f5f5;
}
.periods-number-list .item .con {
  flex:1;
}
.periods-number-list .item .con .name{
  font-size:14px;
  color:#999;
  margin-bottom:10rpx;
}
.periods-number-list .item .right-arrow {
  width:22rpx;
  height:38rpx;
  margin-right:20rpx;
}
/*期数列表end*/

/*球start*/
.balls {
  display:flex;
  align-items: center;
  justify-content: center;
  height:100%;
}
.balls view {
  width:20rpx;
  height:20rpx;
  border-radius:100%;
  margin-right:6rpx;
}
.balls .red {
  background-color:#ef002e;
}
.balls .blue {
  background-color:#4a90e2;
}
/*球end*/